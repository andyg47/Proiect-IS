<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    tools:context=".Splashscreenok">


    <ImageView
        android:id="@+id/appsplash"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="99dp"
        android:layout_marginLeft="99dp"

        android:layout_marginTop="298dp"
        android:layout_marginEnd="101dp"
        android:layout_marginRight="101dp"
        android:src="@drawable/splash_icon" />

    <TextView
        android:id="@+id/appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yoga App"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="115dp"


        />


    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dp"
        android:hint="Enter Username"
        android:textColor="#FFF"
        android:textSize="25.0dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Password"
        android:textSize="25.0dp"
        android:inputType="textPassword"
        android:textColor="#FFF"
        android:layout_below="@+id/etUsername"/>

    <CheckBox
        android:id="@+id/cbShowPassword"
        android:layout_width="150.0dp"
        android:layout_height="wrap_content"
        android:text="Show"
        android:textSize="25.0dp"
        android:layout_alignBottom="@+id/etPassword"
        android:layout_alignEnd="@+id/etPassword"
        android:layout_marginBottom="15.0dp"
        android:checked="false"
        android:textStyle="bold"
        android:layout_alignRight="@+id/etPassword" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="180.0dp"
        android:layout_height="70.0dp"
        android:layout_below="@+id/etPassword"
        android:layout_marginLeft="120.0dp"
        android:layout_marginTop="2.0dp"
        android:text="Login"
        android:textSize="30.0dp" />


</RelativeLayout>